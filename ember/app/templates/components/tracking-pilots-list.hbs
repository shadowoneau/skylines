{{#if (eq pilots.length 1)}}
  <table class="table">
    <tbody>
    {{#each pilots as |pilot|}}
      <tr>
        <th>{{t "pilot"}}</th>
        <td>{{link-to pilot.name "user" pilot.id}}</td>
      </tr>

      {{#if pilot.club}}
        <tr>
          <th>{{t "club"}}</th>
          <td>{{link-to pilot.club.name "club" pilot.club.id}}</td>
        </tr>
      {{/if}}

      {{#if (gt pilot.trackingDelay 0)}}
        <tr>
          <th><span rel="tooltip" title={{t "delay-description"}}>{{t "delay"}}</span></th>
          <td>{{t "tracking-delay-choice" delay=pilot.trackingDelay}}</td>
        </tr>
      {{/if}}
    {{/each}}
    </tbody>
  </table>

{{else}}
  <table class="table">
    <tbody>
    {{#each pilots as |pilot|}}
      <tr>
        <td><span class="badge" style="background-color: {{ pilot.color }}">{{or pilot.trackingCallsign (initials pilot.name)}}</span></td>
        <td>{{link-to pilot.name "user" pilot.id}}</td>
        <td>{{#if pilot.club}}{{link-to (truncate pilot.club.name 25) "club" pilot.club.id}}{{/if}}</td>
      </tr>
    {{/each}}
    </tbody>
  </table>
{{/if}}