{{#active-link}}
  {{#link-to "flights.all"}}{{t "all"}}{{/link-to}}
{{/active-link}}

{{#if prevDate}}
  {{#active-link}}
    {{#link-to "flights.date" prevDate}}&nbsp;{{fa-icon "arrow-left"}}&nbsp;{{/link-to}}
  {{/active-link}}
{{/if}}

{{#if (or (not date) latest)}}
  {{#active-link}}
    {{#link-to "flights.latest"}}
      {{#if date}}
        {{format-date date format="ddmmyyyy"}}
      {{else}}
        {{t "latest"}}
      {{/if}}
      &nbsp;{{#date-picker date=date onSelect=(action "dateSelected")}}{{fa-icon "calendar"}}{{/date-picker}}
    {{/link-to}}
  {{/active-link}}
{{/if}}

{{#if (and date (not latest))}}
  {{#active-link}}
    {{#link-to "flights.date" date}}
      {{format-date date format="ddmmyyyy"}}
      &nbsp;{{#date-picker date=date onSelect=(action "dateSelected")}}{{fa-icon "calendar"}}{{/date-picker}}
    {{/link-to}}
  {{/active-link}}
{{/if}}

{{#if nextDate}}
  {{#active-link}}
    {{#link-to "flights.date" nextDate}}&nbsp;{{fa-icon "arrow-right"}}&nbsp;{{/link-to}}
  {{/active-link}}
{{/if}}

{{#if airport}}
  {{#active-link}}
    {{#link-to "flights.airport" airport.id}}{{airport.name}}{{/link-to}}
  {{/active-link}}
{{/if}}

{{#if club}}
  {{#active-link}}
    {{#link-to "flights.club" club.id}}{{club.name}}{{/link-to}}
  {{/active-link}}
{{/if}}

{{#if (and account.club (not-eq account.club.id club.id))}}
  {{#active-link}}
    {{#link-to "flights.club" account.club.id}}{{account.club.name}}{{/link-to}}
  {{/active-link}}
{{/if}}

{{#if pilot}}
  {{#active-link}}
    {{#link-to "flights.pilot" pilot.id}}{{pilot.name}}{{/link-to}}
  {{/active-link}}
{{/if}}

{{#if (and account.user (not-eq account.user.id pilot.id))}}
  {{#active-link}}
    {{#link-to "flights.pilot" account.user.id}}{{account.user.name}}{{/link-to}}
  {{/active-link}}
{{/if}}

{{#if account.user}}
  {{#active-link}}
    {{#link-to "flights.unassigned"}}{{t "unassigned"}}{{/link-to}}
  {{/active-link}}
{{/if}}

{{#if hasPinned}}
  {{#active-link}}
    {{#link-to "flights.pinned"}}{{t "pinned"}}{{/link-to}}
  {{/active-link}}
{{/if}}
