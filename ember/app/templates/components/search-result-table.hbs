<table class="table table-striped search-results">
  <tbody>
  {{#each results as |result|}}
    {{search-result-row result=result}}
  {{else}}
    <tr>
      <td colspan="4">
        {{#if searchText}}
          {{t "search.no-results"}}
        {{else}}
          {{t "search.no-search-text"}}
        {{/if}}
      </td>
    </tr>
  {{/each}}
  </tbody>
</table>