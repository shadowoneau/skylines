{{#if (not-eq column sortColumn)}}
  {{#link-to (query-params column=column order=defaultOrder) tagName="th" class=cssClass}}{{yield}}{{/link-to}}
{{else if (eq sortOrder "asc")}}
  {{#link-to (query-params column=column order="desc") tagName="th" class=cssClass}}{{fa-icon "chevron-up"}} {{yield}}{{/link-to}}
{{else}}
  {{#link-to (query-params column=column order="asc") tagName="th" class=cssClass}}{{fa-icon "chevron-down"}} {{yield}}{{/link-to}}
{{/if}}
