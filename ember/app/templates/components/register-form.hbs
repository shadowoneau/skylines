<form {{action "submit" on="submit"}}>
  {{#if error}}
    <div class="alert alert-danger" role="alert">{{error}}</div>
  {{/if}}

  {{validated-input
    value=email
    validation=validations.attrs.email
    label=(t "email-address")
    disabled=saveTask.isRunning}}

  {{validated-input
    value=firstName
    validation=validations.attrs.firstName
    label=(t "first-name")
    disabled=saveTask.isRunning}}

  {{validated-input
    value=lastName
    validation=validations.attrs.lastName
    label=(t "last-name")
    disabled=saveTask.isRunning}}

  {{validated-input
    type='password'
    value=password
    validation=validations.attrs.password
    label=(t "password")
    disabled=saveTask.isRunning}}

  {{validated-input
    type='password'
    value=passwordConfirmation
    validation=validations.attrs.passwordConfirmation
    label=(t "confirm-password")
    disabled=saveTask.isRunning}}

  <button class="btn btn-primary btn-block" type="submit" disabled={{or saveTask.isRunning (not validations.isValid)}}>
    {{t (if saveTask.isRunning "registering" "register")}}
  </button>
</form>
