<thead>
<tr>
  <th>{{t "year"}}</th>
  <th colspan="2">{{t "flight-time"}}</th>
</tr>
</thead>
<tbody>
{{#each years as |year|}}
  <tr>
    <td class="col-xs-2">{{year.year}}</td>
    <td class="col-xs-2">
      <span rel="tooltip"
            title="{{t "n-avg-hours-per-flight" num=(format-hours year.average_duration) }}">
        {{t "n-hours" num=(format-hours year.duration)}}
      </span>
    </td>
    <td class="col-xs-8">
      <div class="progress">
        <div class="progress-bar progress-bar-warning"
             role="progressbar"
             aria-valuenow="{{percent year.duration max}}"
             aria-valuemin="0"
             aria-valuemax="100"
             style="width: {{percent year.duration max}}%;"></div>
      </div>
    </td>
  </tr>
{{/each}}

<tr>
  <td><strong>{{t "total"}}</strong></td>
  <td colspan="2"><strong>{{t "n-hours" num=(format-hours sum)}}</strong></td>
</tr>
</tbody>
