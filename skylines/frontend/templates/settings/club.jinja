{% extends "settings/base.jinja" %}
{% set settings_page = "club" %}

{% from "macros/form.jinja" import render_field %}

{% block title %}{% trans %}Change Club{% endtrans %}{% endblock %}

{% block settings_content -%}
<div class="panel panel-default">
  <div class="panel-heading">
    <h3 class="panel-title">{{ _('Select Club') }}</h3>
  </div>
  <div class="panel-body">
    <form method="POST" action="{{ url_for('settings.club_change', user=g.user_id) }}" role="form">
      {{ change_form.hidden_tag() }}
      {{ render_field(change_form.club) }}
      <div class="form-group">
        <input class="form-control btn btn-primary" value="{{ _('Change') }}" type="submit">
      </div>
    </form>
  </div>
</div>

<div class="panel panel-default">
  <div class="panel-heading">
    <h3 class="panel-title">{{ _('Register Club') }}</h3>
  </div>
  <div class="panel-body">
    <form method="POST" action="{{ url_for('settings.club_create', user=g.user_id) }}" role="form">
      {{ create_form.hidden_tag() }}
      {{ render_field(create_form.name) }}
      <div class="form-group">
        <input class="form-control btn btn-primary" value="{{ _('Create') }}" type="submit">
      </div>
    </form>
  </div>
</div>
{%- endblock %}
